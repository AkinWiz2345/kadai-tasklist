<div>
  <h1>ログイン</h1>
</div>


<div>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit 'ログイン' %>
  <% end %>

  <%= link_to '新規登録はこちら', signup_path %>
</div>
